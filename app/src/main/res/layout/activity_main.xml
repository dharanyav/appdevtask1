<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context="com.example.vanchi.bgchange2.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorchange"
        android:text="blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.282" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:onClick="colorchange2"
        android:text="red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:onClick="colorchange3"
        android:text="green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="colorchange4"
        android:text="reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="247dp"
        app:layout_constraintHorizontal_bias="0.886" />

    <TextView
        android:id="@+id/redvalue"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/greenvalue"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:background="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintLeft_toRightOf="@+id/redvalue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/bluevalue"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/greenvalue"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.158" />

</android.support.constraint.ConstraintLayout>
